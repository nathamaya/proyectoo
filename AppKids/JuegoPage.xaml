<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppKids.JuegoPage"
             Shell.NavBarIsVisible="False"
             Title="Match Game"
             BackgroundColor="Transparent">

    <Grid RowDefinitions="*,Auto" Padding="10">
        <!-- Lista de mensajes -->
        <CollectionView x:Name="ChatList"
                        ItemsSource="{Binding Messages}"
                        VerticalOptions="FillAndExpand"
                        BackgroundColor="Blue">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           Margin="5"
                           CornerRadius="15"
                           HasShadow="False"
                           BackgroundColor="{Binding IsUser, Converter={StaticResource BoolToColorConverter}}"
                           HorizontalOptions="{Binding IsUser, Converter={StaticResource BoolToAlignConverter}}">
                        <Label Text="{Binding Text}"
                               TextColor="White"
                               FontSize="16"
                               HorizontalOptions="Start" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Entrada de texto -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Padding="5" BackgroundColor="White">
            <Entry x:Name="UserEntry"
                   Placeholder="Escribe un mensaje..."
                   FontSize="16"
                   Margin="10,0"
                   BackgroundColor="Black" />

            <Button Text="ðŸ“©"
                    Clicked="OnSendClicked"
                    FontSize="20"
                    BackgroundColor="Black"
                    TextColor="#128C7E"
                    Grid.Column="1" />
        </Grid>
    </Grid>
</ContentPage>
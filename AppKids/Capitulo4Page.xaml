<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppKids.Capitulo4Page"
             Title="Capitulo4Page"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent">

        <Grid>
            <!-- Fondo igual que inicio -->
            <Image Source="font.jpg"
               Aspect="AspectFill"
               Opacity="0.85" />

            <!-- Contenido principal -->
            <ScrollView VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

                    <!-- Título grande amarillo -->
                    <Label Text="Capítulo Cuatro"
                       FontSize="40"
                       FontAttributes="Bold"
                       TextColor="#FFD54F"
                       HorizontalOptions="Center"
                       FontFamily="cursive" />

                    <!-- Imagen con bordes redondeados -->
                    <Image Source="cuatro.png"
                               HeightRequest="150"
                               HorizontalOptions="Center"/>

                    <!-- Texto de la historia en blanco -->
                <Label Text="El Principito viaja a otros planetas para conocer otros mundos. En uno encuentra a un rey que quiere mandar sobre todo, en otro a un hombre vanidoso que solo quiere ser admirado, y en otro a un bebedor que bebe para olvidar. También conoce a un hombre de negocios que cuenta estrellas y a un farolero que enciende y apaga una luz sin descanso. El Principito aprende que los adultos a veces hacen cosas que no tienen mucho sentido..."
                       FontSize="16"
                       TextColor="White"
                       HorizontalTextAlignment="Start"
                       LineBreakMode="WordWrap" />

                    <!-- Botón amarillo grande -->
                    <Button Text="Ir a Preguntas"
                        BackgroundColor="#FFD54F"
                        TextColor="Black"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="25"
                        HeightRequest="60"
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnPreguntasClicked" />

                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppKids.PreguntasCuatro"
             Title="PreguntasCuatro"
             BackgroundColor="#FFF8E1"
             Shell.NavBarIsVisible="False">

    <Grid>
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="30">

                    <Label Text="Preguntas - Capítulo 4"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                    <!-- Pregunta 1 -->
                    <Label Text="1. ¿Cómo se llamaba el planeta del Principito?" 
                       FontSize="18"
                       TextColor="Black"/>
                    <RadioButton x:Name="rb1_1" Content="Asteroide C-614" GroupName="p1" TextColor="Black"/>
                    <RadioButton x:Name="rb1_2" Content="Planeta Z-42" GroupName="p1" TextColor="Black"/>
                    <RadioButton x:Name="rb1_3" Content="Asteroide B-612" GroupName="p1" TextColor="Black"/>
                    <Image x:Name="imgP1" IsVisible="False" HeightRequest="30" />

                    <!-- Pregunta 2 -->
                    <Label Text="2. ¿Quién descubrió el planeta del Principito?" 
                       FontSize="18"
                       TextColor="Black"/>
                    <RadioButton x:Name="rb2_1" Content="Un astrónomo turco" GroupName="p2" TextColor="Black"/>
                    <RadioButton x:Name="rb2_2" Content="El narrador" GroupName="p2" TextColor="Black"/>
                    <RadioButton x:Name="rb2_3" Content="Un científico francés" GroupName="p2" TextColor="Black"/>
                    <Image x:Name="imgP2" IsVisible="False" HeightRequest="30" />

                    <!-- Pregunta 3 -->
                    <Label Text="3. ¿Por qué no le creyeron al astrónomo en su primer descubrimiento?" 
                       FontSize="18"
                       TextColor="Black"/>
                    <RadioButton x:Name="rb3_1" Content="Porque era muy joven" GroupName="p3" TextColor="Black"/>
                    <RadioButton x:Name="rb3_2" Content="Por su manera de vestir" GroupName="p3" TextColor="Black"/>
                    <RadioButton x:Name="rb3_3" Content="Porque el telescopio era viejo" GroupName="p3" TextColor="Black"/>
                    <Image x:Name="imgP3" IsVisible="False" HeightRequest="30" />

                    <!-- Botón -->
                    <Button Text="Siguiente capítulo"
                        Clicked="Button_Clicked"
                        BackgroundColor="#F9C80E"
                        TextColor="Black"/>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Pantalla emergente de resultado -->
            <Frame x:Name="popupResultado"
               IsVisible="False"
               BackgroundColor="#E0F7FA"
               BorderColor="LightBlue"
               CornerRadius="20"
               Padding="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="300">
                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                    <Label x:Name="lblResultado"
                       FontSize="20"
                       TextColor="Brown"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                    <Button Text="Continuar"
                        Clicked="Continuar_Clicked"
                        BackgroundColor="#F9C80E"
                        TextColor="Black"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ContentPage>
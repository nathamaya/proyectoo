<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppKids.PreguntasDos"
             Title="PreguntasDos"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FFF8E1">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="30">

                <Label Text="Preguntas - Capítulo 2"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Brown"/>

                <!-- Pregunta 1 -->
                <Label Text="1. ¿Qué le pide el Principito al narrador apenas se conocen?" 
                       FontSize="18"
                       TextColor="Black"/>
                <RadioButton x:Name="rb1_1" Content="Que lo lleve a su planeta" GroupName="p1" TextColor="Black"/>
                <RadioButton x:Name="rb1_2" Content="Que le cuente una historia" GroupName="p1" TextColor="Black"/>
                <RadioButton x:Name="rb1_3" Content="Que le dibuje un cordero" GroupName="p1" TextColor="Black"/>
                <Image x:Name="imgP1" IsVisible="False" HeightRequest="30" />

                <!-- Pregunta 2 -->
                <Label Text="2. ¿Cómo reacciona el narrador ante la insistencia del Principito?" 
                       FontSize="18"
                       TextColor="Black"/>
                <RadioButton x:Name="rb2_1" Content="Se pone a llorar" GroupName="p2" TextColor="Black"/>
                <RadioButton x:Name="rb2_2" Content="Se enfada y lo ignora" GroupName="p2" TextColor="Black"/>
                <RadioButton x:Name="rb2_3" Content="Acepta y le dibuja un cordero" GroupName="p2" TextColor="Black"/>
                <Image x:Name="imgP2" IsVisible="False" HeightRequest="30" />

                <!-- Pregunta 3 -->
                <Label Text="3. ¿Qué dibujo finalmente le gusta al Principito?" 
                       FontSize="18"
                       TextColor="Black"/>
                <RadioButton x:Name="rb3_1" Content="Un elefante dentro de una boa" GroupName="p3" TextColor="Black"/>
                <RadioButton x:Name="rb3_2" Content="Un cordero grande con cuernos" GroupName="p3" TextColor="Black"/>
                <RadioButton x:Name="rb3_3" Content="Un cordero dormido en una caja" GroupName="p3" TextColor="Black"/>
                <Image x:Name="imgP3" IsVisible="False" HeightRequest="30" />

                <!-- Botón -->
                <Button Text="Siguiente capítulo"
                        Clicked="Button_Clicked"
                        BackgroundColor="#F9C80E"
                        TextColor="Black"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Pantalla emergente de resultado -->
        <Frame x:Name="popupResultado"
               IsVisible="False"
               BackgroundColor="#E0F7FA"
               BorderColor="LightBlue"
               CornerRadius="20"
               Padding="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="300">
            <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                <Label x:Name="lblResultado"
                       FontSize="20"
                       TextColor="Brown"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Button Text="Continuar"
                        Clicked="Continuar_Clicked"
                        BackgroundColor="#F9C80E"
                        TextColor="Black"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>